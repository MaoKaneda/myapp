<div class="container">
  <h1>新しい質問を作成</h1>

  <%= form_with(model: @question, local: true) do |f| %>
    <div>
      <%= f.label :title, '質問タイトル' %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :content, '質問内容' %>
      <%= f.text_area :content %>
    </div>

    <%= f.submit '質問を投稿' %>
  <% end %>

  <%= link_to '質問一覧に戻る', questions_path, class: 'btn' %>
</div>
